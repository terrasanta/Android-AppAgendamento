<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.troli.appagendamento.Activity.CadastroCompromissoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo compromisso"
        />

    <EditText
        android:id="@+id/txtTituloCompromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título do mizerávi"
        />

    <EditText
        android:id="@+id/txtDescricaoCompromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição"
        />

    <EditText
        android:id="@+id/txtPrioridadeCompromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prioridade"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inserir"
        android:onClick="salvarCompromisso"
        />
</LinearLayout>
